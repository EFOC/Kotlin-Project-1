<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EventList">
    <Button
            android:text="Go Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_event_list_go_back"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
    />
    <Button
            android:text="New Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_event_list_new_event"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
    />
    <TextView
            android:text="Current Events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_event_list_title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="105dp"/>
    <ScrollView
            android:orientation="vertical"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_event_list_title"
            android:layout_height="wrap_content" android:id="@+id/ll_event_list_events">
        <LinearLayout
                android:id="@+id/ll_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_alarm_on_black_24dp"
                        android:id="@+id/imageView" android:layout_weight="1"/>
                <Button
                        android:text="More"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>